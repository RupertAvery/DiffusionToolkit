                                </Grid>

                                <Grid  Background="#80000000" >
                                    <Label Style="{DynamicResource SmallCaps}" Margin="10,0,0,0">ALBUMS</Label>
                                </Grid>


                                <Grid  Background="Transparent" Margin="10">
                                    <ItemsControl ItemsSource="{Binding Path=Albums}">
                                        <ItemsControl.ItemTemplate>
